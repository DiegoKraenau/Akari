{
    "compilerOptions": {
      "declaration": true,
      "target": "ES2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./lib",
      "allowJs": false,
    },
    "include": ["src/**/*", "index.ts"]
}